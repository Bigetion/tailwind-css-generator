{
  "name": "tailwind-css-generator",
  "version": "4.1.0",
  "description": "Tailwind CSS Generator",
  "type": "module",
  "main": "index.js",
  "module": "index.esm.js",
  "types": "index.d.ts",
  "exports": {
    ".": {
      "import": "./index.esm.js",
      "require": "./index.js",
      "types": "./index.d.ts"
    },
    "./basic": {
      "import": "./basic.esm.js",
      "types": "./types.d.ts"
    },
    "./basic.esm.js": "./basic.esm.js",
    "./basic.min.js": "./basic.min.js"
  },
  "files": [
    "index.js",
    "index.esm.js", 
    "index.min.js",
    "index.d.ts",
    "basic.esm.js",
    "basic.min.js"
  ],
  "scripts": {
    "build": "node build.js && npm run build:types",
    "build:cjs": "esbuild src/index.js --bundle --format=cjs --outfile=index.js --platform=node",
    "build:esm": "esbuild src/index.js --bundle --format=esm --outfile=index.esm.js --platform=neutral",
    "build:min": "esbuild src/index.js --bundle --format=esm --minify --outfile=index.min.js --platform=neutral",  
    "build:types": "tsc src/index.js --declaration --allowJs --emitDeclarationOnly --outDir . --skipLibCheck",
    "dev": "npm run build && node test.js",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Bigetion/tailwind-css-generator.git"
  },
  "keywords": [
    "tailwind"
  ],
  "author": "Bigetion",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/Bigetion/tailwind-css-generator/issues"
  },
  "homepage": "https://github.com/Bigetion/tailwind-css-generator#readme",
  "devDependencies": {
    "esbuild": "^0.19.0",
    "typescript": "^5.0.0"
  }
}
